<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="#ECEFF1"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="3dp"
    android:layout_marginTop="0dip"
    android:layout_marginBottom="0dip"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp">

        <ImageView
            android:id="@+id/donorlist_avatar"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/userpic" />


        <TextView
            android:id="@+id/list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_blood_group"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/list_blood_group"
            android:text="Name"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/list_blood_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_name"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/donorlist_avatar"
            android:ellipsize="end"
            android:text="Blood group"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#FF0000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/list_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_blood_group"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/donorlist_avatar"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Gendder"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#009900"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/list_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_gender"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/donorlist_avatar"
            android:ellipsize="end"
            android:text="Age"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000000"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/list_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_age"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/donorlist_avatar"
            android:ellipsize="end"
            android:text="Address"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000000"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/list_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_address"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/donorlist_avatar"
            android:ellipsize="end"
            android:text="Contact Number"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>