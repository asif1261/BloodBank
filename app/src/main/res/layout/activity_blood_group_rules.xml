<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_blood_group_rules"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context="com.example.user.bloodbank.BloodGroupRules">

    <TextView
        android:text="@string/ruleBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBloodRules"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#EEEEEE"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:background="#F44336"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAboutUsRC"
        android:text="@string/aboutUs"
        android:textSize="19sp"
        android:background="#F44336"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#EEEEEE"
        android:drawableTop="@drawable/info"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textViewAboutUsRC"
        android:layout_below="@+id/textViewBloodRules">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:srcCompat="@drawable/bloodgroupruleschart"
            android:id="@+id/imageView2"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
